@model IEnumerable<GuardianAngels.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/newLayout1.cshtml";
}
<style>
    .result {
        background-color: green;
        color: #fff;
        padding: 20px;
    }

    .row {
        display: flex;
    }

    .fab {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 100px;
        height: 100px;
        background-color: #fff; /* Change color as needed */
        color: #fff;
        border-radius: 80%;
        display: flex;
        justify-content: center;
        align-items: center;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);
        cursor: pointer;
        transition: background-color 0.3s;
        font-size: 24px;
    }

        .fab:hover {
            background-color: #fff; /* Slightly darker shade on hover */
        }
</style>

<script>
     function openPopup() {
         var popup = window.open('@Url.Action("UserMessages", "Messages")', 'PopupWindow', 'width=800,height=400');
         popup.focus();
     }
</script>

<div class="fab" onclick="openPopup()">
    <img src="~/images/notification.gif" width="65" height="65" />
</div>

<center>
    <h1>Students</h1>
    <hr style="width:50%" />
</center>
<br />
<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <a href="@Url.Action("Details", new { id = item.StudentId })">
                    <center><img src="data:image/png;base64,@(item.StudentImage)" alt="Church Leader Image" class="card-img-top"></center>
                    <div class="card-body">
                        <center>
                            <h5 class="card-title">@item.Name</h5>
                            <hr style="width:70%" />
                            <p class="card-text">
                                <strong>Status:</strong> @item.Status<br />
                            </p>
                        </center>
                    </div>
                </a>
            </div>
        </div>
    }
</div>

<br />
<br />
<br />
<br />
<br />















