@model IEnumerable<GuardianAngels.Models.School>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/newLayout1.cshtml";
}

<h2>DBschools</h2>

<br/>

<table class="table">
    <tr>
        <th>

        </th>
        <th>
            School Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            Contact Number
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/images/schoolicon.png" width="25" height="25"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SchoolName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SchoolId }) |
            @Html.ActionLink("Details", "Details", new { id=item.SchoolId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SchoolId })
        </td>
    </tr>
}

</table>
